@model IEnumerable<CitasMedicasWeb.Models.HorarioMedico>
@{
    ViewData["Title"] = "Horarios de Médicos";
}

<h2>Horarios de Médicos</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nuevo Horario
    </a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>Médico</th>
            <th>Especialidad</th>
            <th>Día</th>
            <th>Hora Inicio</th>
            <th>Hora Fin</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var h in Model)
        {
            <tr>
                <td>@h.Medico?.NombresCompletos</td>
                <td>@h.Medico?.Especialidad?.Nombre</td>
                <td>
                    @{
                        string[] dias = { "Lunes", "Martes", "Miércoles", "Jueves", "Viernes", "Sábado", "Domingo" };
                        @dias[h.DiaSemana - 1]
                    }
                </td>
                <td>@h.HoraInicio</td>
                <td>@h.HoraFin</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@h.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@h.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>