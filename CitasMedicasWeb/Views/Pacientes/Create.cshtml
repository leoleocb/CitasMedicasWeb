@model CitasMedicasWeb.Models.Paciente

@{
    ViewData["Title"] = "Create";
}

<h1>Registrar Paciente</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-floating mb-3">
                <input asp-for="Nombres" class="form-control" placeholder="Nombres" />
                <label asp-for="Nombres"></label>
                <span asp-validation-for="Nombres" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Apellidos" class="form-control" placeholder="Apellidos" />
                <label asp-for="Apellidos"></label>
                <span asp-validation-for="Apellidos" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Documento" class="form-control" placeholder="Documento" />
                <label asp-for="Documento"></label>
                <span asp-validation-for="Documento" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Telefono" class="form-control" placeholder="Teléfono" />
                <label asp-for="Telefono"></label>
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" placeholder="Correo electrónico" />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="FechaNacimiento" type="date" class="form-control" />
                <label asp-for="FechaNacimiento"></label>
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-primary">Guardar</button>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index">Volver a la lista</a>
</div>