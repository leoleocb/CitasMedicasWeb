@model CitasMedicasWeb.Models.Paciente

@{
    ViewData["Title"] = "Detalles de Paciente";
}

<h1>Detalles de Paciente</h1>
<hr />

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Nombres</dt>
            <dd class="col-sm-9 fw-bold">@Model.Nombres</dd>

            <dt class="col-sm-3">Apellidos</dt>
            <dd class="col-sm-9">@Model.Apellidos</dd>

            <dt class="col-sm-3">Documento</dt>
            <dd class="col-sm-9">@Model.Documento</dd>

            <dt class="col-sm-3">Teléfono</dt>
            <dd class="col-sm-9">@Model.Telefono</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Fecha de nacimiento</dt>
            <dd class="col-sm-9">@Model.FechaNacimiento?.ToString("dd/MM/yyyy")</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Volver a la lista
    </a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
        <i class="bi bi-pencil-square"></i> Editar
    </a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
        <i class="bi bi-trash"></i> Eliminar
    </a>
</div>