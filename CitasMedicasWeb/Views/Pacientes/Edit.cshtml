@model CitasMedicasWeb.Models.Paciente
@{
    ViewData["Title"] = "Editar Paciente";
}

<h1>Editar Paciente</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-floating mb-3">
                <input asp-for="Nombres" class="form-control @(ViewData.ModelState["Nombres"]?.Errors.Count > 0 ? "is-invalid" : "")" />
                <label asp-for="Nombres"></label>
                <span asp-validation-for="Nombres" class="invalid-feedback"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Apellidos" class="form-control @(ViewData.ModelState["Apellidos"]?.Errors.Count > 0 ? "is-invalid" : "")" />
                <label asp-for="Apellidos"></label>
                <span asp-validation-for="Apellidos" class="invalid-feedback"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Documento" class="form-control @(ViewData.ModelState["Documento"]?.Errors.Count > 0 ? "is-invalid" : "")" />
                <label asp-for="Documento"></label>
                <span asp-validation-for="Documento" class="invalid-feedback"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Telefono" class="form-control @(ViewData.ModelState["Telefono"]?.Errors.Count > 0 ? "is-invalid" : "")" />
                <label asp-for="Telefono"></label>
                <span asp-validation-for="Telefono" class="invalid-feedback"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control @(ViewData.ModelState["Email"]?.Errors.Count > 0 ? "is-invalid" : "")" />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="invalid-feedback"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="FechaNacimiento" type="date"
                       class="form-control @(ViewData.ModelState["FechaNacimiento"]?.Errors.Count > 0 ? "is-invalid" : "")" />
                <label asp-for="FechaNacimiento"></label>
                <span asp-validation-for="FechaNacimiento" class="invalid-feedback"></span>
            </div>

            <button type="submit" class="btn btn-warning w-100">
                <i class="bi bi-save"></i> Guardar cambios
            </button>
        </form>
    </div>
</div>