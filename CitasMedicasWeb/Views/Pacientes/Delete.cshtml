@model CitasMedicasWeb.Models.Paciente

@{
    ViewData["Title"] = "Eliminar Paciente";
}

<h1>Eliminar Paciente</h1>
<hr />

<div class="alert alert-danger">
    <i class="bi bi-exclamation-triangle-fill"></i>
    ¿Estás seguro que deseas eliminar este paciente?
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Nombres</dt>
            <dd class="col-sm-9 fw-bold">@Model.Nombres</dd>

            <dt class="col-sm-3">Apellidos</dt>
            <dd class="col-sm-9">@Model.Apellidos</dd>

            <dt class="col-sm-3">Documento</dt>
            <dd class="col-sm-9">@Model.Documento</dd>

            <dt class="col-sm-3">Teléfono</dt>
            <dd class="col-sm-9">@Model.Telefono</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Fecha de nacimiento</dt>
            <dd class="col-sm-9">@Model.FechaNacimiento?.ToString("dd/MM/yyyy")</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Confirmar eliminación
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Cancelar
    </a>
</form>