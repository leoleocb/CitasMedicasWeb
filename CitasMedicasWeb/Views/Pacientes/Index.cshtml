@model IEnumerable<CitasMedicasWeb.Models.Paciente>
@{
    ViewData["Title"] = "Pacientes";
}

<h2 class="mb-3">Pacientes</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nuevo Paciente
    </a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Documento</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th>Fecha Nac.</th>
            <th style="width:200px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td class="fw-bold">@p.Nombres</td>
                <td>@p.Apellidos</td>
                <td>@p.Documento</td>
                <td>@p.Telefono</td>
                <td>@p.Email</td>
                <td>@p.FechaNacimiento?.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                    <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-info btn-sm">
                        <i class="bi bi-eye"></i> Detalles
                    </a>
                    <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">No hay pacientes registrados.</div>
}