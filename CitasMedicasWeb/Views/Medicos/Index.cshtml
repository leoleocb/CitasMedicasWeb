@model IEnumerable<CitasMedicasWeb.Models.Medico>
@{
    ViewData["Title"] = "Médicos";
}

<h2 class="mb-3">Médicos</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nuevo Médico
    </a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Nombre Completo</th>
            <th>CMP</th>
            <th>Especialidad</th>
            <th>Email</th>
            <th style="width:200px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td class="fw-bold">@m.NombresCompletos</td>
                <td>@m.CMP</td>
                <td>@m.Especialidad?.Nombre</td>
                <td>@m.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@m.Id" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                    <a asp-action="Details" asp-route-id="@m.Id" class="btn btn-info btn-sm">
                        <i class="bi bi-eye"></i> Detalles
                    </a>
                    <a asp-action="Delete" asp-route-id="@m.Id" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">No hay médicos registrados.</div>
}