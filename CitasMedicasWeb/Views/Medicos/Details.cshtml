@model CitasMedicasWeb.Models.Medico

@{
    ViewData["Title"] = "Detalles de Médico";
}

<h1>Detalles de Médico</h1>
<hr />

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Nombre Completo</dt>
            <dd class="col-sm-9 fw-bold">@Model.NombresCompletos</dd>

            <dt class="col-sm-3">CMP</dt>
            <dd class="col-sm-9">@Model.CMP</dd>

            <dt class="col-sm-3">Especialidad</dt>
            <dd class="col-sm-9">@Model.Especialidad?.Nombre</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Volver a la lista
    </a>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
        <i class="bi bi-pencil-square"></i> Editar
    </a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
        <i class="bi bi-trash"></i> Eliminar
    </a>
</div>