@model IEnumerable<CitasMedicasWeb.Models.Especialidad>
@{
    ViewData["Title"] = "Especialidades";
}

<h2 class="mb-3">Especialidades Médicas</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nueva Especialidad
    </a>
</p>

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th style="width:180px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>
                    <span class="fw-bold">@e.Nombre</span>
                </td>
                <td>
                    @if (string.IsNullOrWhiteSpace(e.Descripcion))
                    {
                        <span class="text-muted fst-italic">Sin descripción</span>
                    }
                    else
                    {
                        @e.Descripcion
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@e.Id" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil-square"></i> Editar
                    </a>
                    <a asp-action="Details" asp-route-id="@e.Id" class="btn btn-info btn-sm">
                        <i class="bi bi-eye"></i> Detalles
                    </a>
                    <a asp-action="Delete" asp-route-id="@e.Id" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">No hay especialidades registradas.</div>
}