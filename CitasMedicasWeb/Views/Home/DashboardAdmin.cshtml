@{
    ViewData["Title"] = "Panel de Administración";
}

<h1 class="mb-4">Panel de Administración</h1>

<div class="row text-center g-3">
    <div class="col-md-3">
        <div class="card shadow-sm border-0 bg-primary text-white h-100">
            <div class="card-body">
                <i class="bi bi-people display-5"></i>
                <h4>Pacientes</h4>
                <p class="display-6">@ViewBag.PacientesCount</p>
            </div>
            <a asp-controller="Pacientes" asp-action="Index" class="card-footer text-white text-decoration-none">
                Ver más <i class="bi bi-arrow-right"></i>
            </a>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm border-0 bg-success text-white h-100">
            <div class="card-body">
                <i class="bi bi-person-badge display-5"></i>
                <h4>Médicos</h4>
                <p class="display-6">@ViewBag.MedicosCount</p>
            </div>
            <a asp-controller="Medicos" asp-action="Index" class="card-footer text-white text-decoration-none">
                Ver más <i class="bi bi-arrow-right"></i>
            </a>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm border-0 bg-warning text-dark h-100">
            <div class="card-body">
                <i class="bi bi-journal-medical display-5"></i>
                <h4>Especialidades</h4>
                <p class="display-6">@ViewBag.EspecialidadesCount</p>
            </div>
            <a asp-controller="Especialidades" asp-action="Index" class="card-footer text-dark text-decoration-none">
                Ver más <i class="bi bi-arrow-right"></i>
            </a>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm border-0 bg-danger text-white h-100">
            <div class="card-body">
                <i class="bi bi-calendar-check display-5"></i>
                <h4>Citas</h4>
                <p class="display-6">@ViewBag.CitasCount</p>
            </div>
            <a asp-controller="Citas" asp-action="Index" class="card-footer text-white text-decoration-none">
                Ver más <i class="bi bi-arrow-right"></i>
            </a>
        </div>
    </div>
</div>