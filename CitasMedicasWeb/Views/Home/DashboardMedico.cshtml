@model IEnumerable<CitasMedicasWeb.Models.Cita>

@{
    ViewData["Title"] = "Panel del Médico";
}

<h1 class="mb-4">Mis Citas de Hoy</h1>

@if (!Model.Any())
{
    <div class="alert alert-info">No tienes citas para hoy.</div>
}
else
{
    <table class="table table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Hora</th>
                <th>Paciente</th>
                <th>Motivo</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.FechaHora.ToString("HH:mm")</td>
                    <td>@c.Paciente?.Apellidos @c.Paciente?.Nombres</td>
                    <td>@c.Motivo</td>
                    <td>
                        @if (c.Estado == "Pendiente")
                        {
                            <span class="badge bg-warning text-dark">Pendiente</span>
                        }
                        else if (c.Estado == "Confirmada")
                        {
                            <span class="badge bg-success">Confirmada</span>
                        }
                        else if (c.Estado == "Cancelada")
                        {
                            <span class="badge bg-danger">Cancelada</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@c.Estado</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}