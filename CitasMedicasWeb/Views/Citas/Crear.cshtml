@model CitasMedicasWeb.Models.Cita
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Agendar Cita";
}

<h1>Agendar Cita</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Crear" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (User.IsInRole("Admin"))
            {
                <div class="form-floating mb-3">
                    <select asp-for="PacienteId" class="form-control @(ViewData.ModelState["PacienteId"]?.Errors.Count > 0 ? "is-invalid" : "")"
                            asp-items="@(new SelectList(ViewBag.Pacientes, "Id", "Apellidos"))"></select>
                    <label asp-for="PacienteId"></label>
                    <span asp-validation-for="PacienteId" class="invalid-feedback"></span>
                </div>
            }
            else if (User.IsInRole("Paciente"))
            {
                <input type="hidden" name="PacienteId" value="@ViewBag.PacienteId" />
            }

            <div class="form-floating mb-3">
                <select id="especialidadSelect" class="form-control">
                    <option value="">-- Seleccione especialidad --</option>
                    @foreach (var e in ViewBag.Especialidades)
                    {
                        <option value="@e.Id">@e.Nombre</option>
                    }
                </select>
                <label>Especialidad</label>
            </div>

            <div class="form-floating mb-3">
                <select asp-for="MedicoId" id="medicoSelect"
                        class="form-control @(ViewData.ModelState["MedicoId"]?.Errors.Count > 0 ? "is-invalid" : "")">
                    <option value="">-- Seleccione médico --</option>
                </select>
                <label asp-for="MedicoId"></label>
                <span asp-validation-for="MedicoId" class="invalid-feedback"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="FechaHora" type="datetime-local"
                       class="form-control @(ViewData.ModelState["FechaHora"]?.Errors.Count > 0 ? "is-invalid" : "")" />
                <label asp-for="FechaHora"></label>
                <span asp-validation-for="FechaHora" class="invalid-feedback"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Motivo" class="form-control @(ViewData.ModelState["Motivo"]?.Errors.Count > 0 ? "is-invalid" : "")" />
                <label asp-for="Motivo"></label>
                <span asp-validation-for="Motivo" class="invalid-feedback"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-check-circle"></i> Guardar cita
            </button>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Volver a la lista
    </a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $("#especialidadSelect").change(function () {
            var especialidadId = $(this).val();
            var $medicoSelect = $("#medicoSelect");
            $medicoSelect.empty().append($("<option>", { value: "", text: "-- Seleccione médico --" }));
            if (especialidadId) {
                $.getJSON('/Citas/GetMedicosByEspecialidad', { especialidadId: especialidadId }, function (data) {
                    $.each(data, function (i, medico) {
                        $medicoSelect.append($("<option>", { value: medico.id, text: medico.nombresCompletos }));
                    });
                });
            }
        });
    </script>
}