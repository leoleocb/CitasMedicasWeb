@model CitasMedicasWeb.Models.Cita
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Agendar Cita";
}

<h1>Agendar Cita</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Crear" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Paciente -->
            @if (User.IsInRole("Admin"))
            {
                <div class="form-floating mb-3">
                    <select asp-for="PacienteId" class="form-control"
                            asp-items="@(new SelectList(ViewBag.Pacientes, "Id", "Apellidos"))"></select>
                    <label asp-for="PacienteId">Paciente</label>
                    <span asp-validation-for="PacienteId" class="text-danger"></span>
                </div>
            }
            else if (User.IsInRole("Paciente"))
            {
                <input type="hidden" name="PacienteId" value="@ViewBag.PacienteId" />
            }

            <!-- Especialidad -->
            <div class="form-floating mb-3">
                <select id="especialidadSelect" class="form-control">
                    <option value="">-- Seleccione especialidad --</option>
                    @foreach (var e in ViewBag.Especialidades)
                    {
                        <option value="@e.Id">@e.Nombre</option>
                    }
                </select>
                <label>Especialidad</label>
            </div>

            <!-- Médicos -->
            <div class="form-floating mb-3">
                <select asp-for="MedicoId" id="medicoSelect" class="form-control">
                    <option value="">-- Seleccione médico --</option>
                </select>
                <label asp-for="MedicoId">Médico</label>
                <span asp-validation-for="MedicoId" class="text-danger"></span>
            </div>

            <!-- Fecha -->
            <div class="form-floating mb-3">
                <input id="fechaInput" type="date" class="form-control" />
                <label for="fechaInput">Fecha</label>
            </div>

            <!-- Horas disponibles -->
            <div class="form-floating mb-3">
                <select asp-for="FechaHora" id="horaSelect" class="form-control">
                    <option value="">-- Seleccione hora --</option>
                </select>
                <label asp-for="FechaHora">Hora disponible</label>
                <span asp-validation-for="FechaHora" class="text-danger"></span>
            </div>

            <!-- Motivo -->
            <div class="form-floating mb-3">
                <input asp-for="Motivo" class="form-control" placeholder="Motivo de la cita" />
                <label asp-for="Motivo"></label>
                <span asp-validation-for="Motivo" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">
                <i class="bi bi-check-circle"></i> Guardar cita
            </button>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Volver a la lista
    </a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Cargar médicos al elegir especialidad
        $("#especialidadSelect").change(function () {
            var especialidadId = $(this).val();
            var $medicoSelect = $("#medicoSelect");

            $medicoSelect.empty().append($("<option>", {
                value: "",
                text: "-- Seleccione médico --"
            }));

            if (especialidadId) {
                $.getJSON('/Citas/GetMedicosByEspecialidad',
                    { especialidadId: especialidadId },
                    function (data) {
                        $.each(data, function (i, medico) {
                            $medicoSelect.append($("<option>", {
                                value: medico.id,
                                text: medico.nombresCompletos
                            }));
                        });
                    });
            }
        });

        // Cargar horas disponibles al elegir médico y fecha
        function cargarHoras() {
            var medicoId = $("#medicoSelect").val();
            var fecha = $("#fechaInput").val();
            var $horaSelect = $("#horaSelect");

            $horaSelect.empty().append($("<option>", {
                value: "",
                text: "-- Seleccione hora --"
            }));

            if (medicoId && fecha) {
                $.getJSON('/Citas/GetHorariosDisponibles',
                    { medicoId: medicoId, fecha: fecha },
                    function (data) {
                        if (data.length === 0) {
                            $horaSelect.append($("<option>", {
                                value: "",
                                text: "No hay horarios disponibles"
                            }));
                        } else {
                            $.each(data, function (i, hora) {
                                // Formato: yyyy-MM-ddTHH:mm
                                var fechaHora = fecha + "T" + hora;
                                $horaSelect.append($("<option>", {
                                    value: fechaHora,
                                    text: hora
                                }));
                            });
                        }
                    });
            }
        }

        $("#medicoSelect, #fechaInput").change(cargarHoras);
    </script>
}