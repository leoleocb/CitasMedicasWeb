@model IEnumerable<CitasMedicasWeb.Models.Cita>
@{
    ViewData["Title"] = "Citas";
}

<h2 class="mb-3">Listado de Citas</h2>

<form method="get" class="row g-2 align-items-end mb-3">
    <div class="col-sm-4 col-md-3">
        <label class="form-label mb-1">Médico</label>
        <input name="filtroMedico" value="@ViewBag.FiltroMedico" class="form-control" placeholder="Nombre médico..." />
    </div>
    <div class="col-sm-4 col-md-3">
        <label class="form-label mb-1">Paciente</label>
        <input name="filtroPaciente" value="@ViewBag.FiltroPaciente" class="form-control" placeholder="Nombre paciente..." />
    </div>
    <div class="col-sm-4 col-md-3">
        <label class="form-label mb-1">Fecha</label>
        <input type="date" name="fecha" value="@ViewBag.Fecha" class="form-control" />
    </div>
    <div class="col-sm-12 col-md-3 text-end">
        <button class="btn btn-outline-secondary me-2" type="submit">Buscar</button>
        <a asp-action="Index" class="btn btn-link">Limpiar</a>
        @if (User.IsInRole("Admin") || User.IsInRole("Paciente"))
        {
            <a asp-action="Crear" class="btn btn-primary float-end">Agendar cita</a>
        }
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Fecha y hora</th>
            <th>Paciente</th>
            <th>Médico</th>
            <th>Especialidad</th>
            <th>Motivo</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.FechaHora.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@c.Paciente?.Apellidos @c.Paciente?.Nombres</td>
                <td>@c.Medico?.NombresCompletos</td>
                <td>@c.Medico?.Especialidad?.Nombre</td>
                <td>@c.Motivo</td>
                <td>
                    @if (c.Estado == "Pendiente")
                    {
                        <span class="badge bg-warning text-dark">Pendiente</span>
                    }
                    else if (c.Estado == "Confirmada")
                    {
                        <span class="badge bg-success">Confirmada</span>
                    }
                    else if (c.Estado == "Cancelada")
                    {
                        <span class="badge bg-danger">Cancelada</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@c.Estado</span>
                    }
                </td>
                <td>
                    <a asp-action="Detalles" asp-route-id="@c.Id" class="btn btn-info btn-sm">Detalles</a>

                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Editar" asp-route-id="@c.Id" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Eliminar" asp-route-id="@c.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    }
                    else if (User.IsInRole("Paciente"))
                    {
                        <a asp-action="Eliminar" asp-route-id="@c.Id" class="btn btn-danger btn-sm">Cancelar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">No hay citas con ese criterio.</div>
}