@model IEnumerable<CitasMedicasWeb.Models.Cita>
@{
    ViewData["Title"] = "Citas";
}

<h2 class="mb-3">Listado de Citas</h2>

@if (User.IsInRole("Paciente"))
{
    <div class="mb-3">
        <a asp-action="Index" asp-route-ver="proximas" class="btn btn-success btn-sm @(ViewBag.Ver == "proximas" ? "active" : "")">Próximas</a>
        <a asp-action="Index" asp-route-ver="pasadas" class="btn btn-secondary btn-sm @(ViewBag.Ver == "pasadas" ? "active" : "")">Historial</a>
    </div>
}

<form method="get" class="row g-2 align-items-end mb-3">
    @if (User.IsInRole("Admin"))
    {
        <div class="col-sm-3">
            <label class="form-label">Médico</label>
            <input name="filtroMedico" value="@ViewBag.FiltroMedico" class="form-control" />
        </div>
        <div class="col-sm-3">
            <label class="form-label">Paciente</label>
            <input name="filtroPaciente" value="@ViewBag.FiltroPaciente" class="form-control" />
        </div>
        <div class="col-sm-3">
            <label class="form-label">Especialidad</label>
            <input name="filtroEspecialidad" value="@ViewBag.FiltroEspecialidad" class="form-control" />
        </div>
        <div class="col-sm-3">
            <label class="form-label">Estado</label>
            <select name="filtroEstado" class="form-control">
                <option value="">-- Todos --</option>
                <option value="Pendiente" selected="@(ViewBag.FiltroEstado == "Pendiente")">Pendiente</option>
                <option value="Confirmada" selected="@(ViewBag.FiltroEstado == "Confirmada")">Confirmada</option>
                <option value="Cancelada" selected="@(ViewBag.FiltroEstado == "Cancelada")">Cancelada</option>
            </select>
        </div>
        <div class="col-sm-3">
            <label class="form-label">Fecha inicio</label>
            <input type="date" name="fechaInicio" value="@ViewBag.FechaInicio" class="form-control" />
        </div>
        <div class="col-sm-3">
            <label class="form-label">Fecha fin</label>
            <input type="date" name="fechaFin" value="@ViewBag.FechaFin" class="form-control" />
        </div>
    }
    <div class="col-sm-3 text-end">
        <button class="btn btn-outline-secondary me-2" type="submit">Buscar</button>
        <a asp-action="Index" class="btn btn-link">Limpiar</a>
        @if (User.IsInRole("Admin") || User.IsInRole("Paciente"))
        {
            <a asp-action="Crear" class="btn btn-primary">Agendar cita</a>
        }
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Fecha y hora</th>
            <th>Paciente</th>
            <th>Médico</th>
            <th>Especialidad</th>
            <th>Motivo</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.FechaHora.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@c.Paciente?.Apellidos @c.Paciente?.Nombres</td>
                <td>@c.Medico?.NombresCompletos</td>
                <td>@c.Medico?.Especialidad?.Nombre</td>
                <td>@c.Motivo</td>
                <td>
                    @if (c.Estado == "Pendiente")
                    {
                        <span class="badge bg-warning text-dark">Pendiente</span>
                    }
                    else if (c.Estado == "Confirmada")
                    {
                        <span class="badge bg-success">Confirmada</span>
                    }
                    else if (c.Estado == "Cancelada")
                    {
                        <span class="badge bg-danger">Cancelada</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@c.Estado</span>
                    }
                </td>
                <td>
                    <a asp-action="Detalles" asp-route-id="@c.Id" class="btn btn-info btn-sm">Detalles</a>

                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Editar" asp-route-id="@c.Id" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Eliminar" asp-route-id="@c.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    }
                    else if (User.IsInRole("Paciente"))
                    {
                        <a asp-action="Eliminar" asp-route-id="@c.Id" class="btn btn-danger btn-sm">Cancelar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">No hay citas con ese criterio.</div>
}