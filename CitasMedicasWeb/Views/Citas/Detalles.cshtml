@model CitasMedicasWeb.Models.Cita

@{
    ViewData["Title"] = "Detalles de la Cita";
}

<h1>Detalles de la Cita</h1>
<hr />

<div class="card shadow-sm">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Paciente</dt>
            <dd class="col-sm-9">@Model.Paciente?.Apellidos @Model.Paciente?.Nombres</dd>

            <dt class="col-sm-3">Documento</dt>
            <dd class="col-sm-9">@Model.Paciente?.Documento</dd>

            <dt class="col-sm-3">Teléfono</dt>
            <dd class="col-sm-9">@Model.Paciente?.Telefono</dd>

            <dt class="col-sm-3">Correo</dt>
            <dd class="col-sm-9">@Model.Paciente?.Email</dd>

            <dt class="col-sm-3">Médico</dt>
            <dd class="col-sm-9">@Model.Medico?.NombresCompletos</dd>

            <dt class="col-sm-3">Especialidad</dt>
            <dd class="col-sm-9">@Model.Medico?.Especialidad?.Nombre</dd>

            <dt class="col-sm-3">Fecha y hora</dt>
            <dd class="col-sm-9">@Model.FechaHora.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3">Motivo</dt>
            <dd class="col-sm-9">@Model.Motivo</dd>

            <dt class="col-sm-3">Estado</dt>
            <dd class="col-sm-9">
                @if (Model.Estado == "Pendiente")
                {
                    <span class="badge bg-warning text-dark">Pendiente</span>
                }
                else if (Model.Estado == "Confirmada")
                {
                    <span class="badge bg-success">Confirmada</span>
                }
                else if (Model.Estado == "Cancelada")
                {
                    <span class="badge bg-danger">Cancelada</span>
                }
                else
                {
                    <span class="badge bg-secondary">@Model.Estado</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Volver a la lista
    </a>

    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Editar" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
        <a asp-action="Eliminar" asp-route-id="@Model.Id" class="btn btn-danger">
            <i class="bi bi-trash"></i> Eliminar
        </a>
    }
    else if (User.IsInRole("Paciente"))
    {
        <a asp-action="Eliminar" asp-route-id="@Model.Id" class="btn btn-danger">
            <i class="bi bi-x-circle"></i> Cancelar cita
        </a>
    }
</div>