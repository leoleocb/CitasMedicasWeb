<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Citas Médicas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CitasMedicasWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-heart-pulse-fill"></i> Citas Médicas
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Inicio
                            </a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Pacientes" asp-action="Index">
                                    <i class="bi bi-people"></i> Pacientes
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Medicos" asp-action="Index">
                                    <i class="bi bi-person-badge"></i> Médicos
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Especialidades" asp-action="Index">
                                    <i class="bi bi-journal-medical"></i> Especialidades
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Citas" asp-action="Index">
                                    <i class="bi bi-calendar-check"></i> Citas
                                </a>
                            </li>
                        }
                        else if (User.IsInRole("Paciente"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Citas" asp-action="Index">
                                    <i class="bi bi-calendar-check"></i> Mis Citas
                                </a>
                            </li>
                        }
                        else if (User.IsInRole("Medico"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Citas" asp-action="Index">
                                    <i class="bi bi-calendar2-week"></i> Mis Citas
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- Login / Logout -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-3 bg-light border-top">
        <div class="container text-center text-muted">
            <small>&copy; @DateTime.Now.Year - Citas Médicas</small>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>